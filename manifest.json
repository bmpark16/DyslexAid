{
  "manifest_version": 2,
  "name": "Font Changer",
  "version": "1.0",
  "description": "Change the font of any website",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "fonts/OpenDyslexicAlta-Regular.otf",
    "fonts/Helvetica.otf",
    "fonts/Lexend-Regular.ttf"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
